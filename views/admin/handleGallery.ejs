<div class="container">
<form role="form" action="/gallery/create" method="post" enctype="multipart/form-data">

<div class="form-group">
<input type="file" name="imagesUploader" required>
</div>
  
<div class="buttonsContainer">
  <button type="submit" class="btn btn-primary">Add Images</button>
</div>
</form>
</div>

<div class="container">
  <h2>Gallery List</h2>
  <table class='table'>
    <% for(var i=0; i<gallery.length; i++) { %>
    <tr>
      <td data-id="<%= gallery[i].id %>" data-model="gallery">
        <td style="width:40%"><img src="<%= image.getSize(image.getFirst(gallery[i].images)) %>" class="img-responsive" alt=""></td>
        <td><a href="/gallery/destroy/<%=gallery[i].id%>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a></td>
      </td>
      <% i++; %>
      <% if(i<gallery.length) { %>
        <td data-id="<%= gallery[i].id %>" data-model="gallery">
          <td style="width:40%"><img src="<%= image.getSize(image.getFirst(gallery[i].images)) %>" class="img-responsive" alt=""></td>
          <td><a href="/gallery/destroy/<%=gallery[i].id%>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a></td>
        </td>
      <% } %>
      <% if(i>=gallery.length) { %>
        <td>
          <td></td>
          <td></td>
        </td>
      <% } %>
    </tr>
    <% } %>  
    <tr>
      <td><td></td><td></td></td>
      <td><td></td><td></td></td>
    </tr>          
  </table>
</div>

</div>